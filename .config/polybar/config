;foreground = ${xrdb:color7:#222}
;foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
bg = ${xrdb:color0:#1F2D3A}
fg = ${xrdb:color7:#2AA198}
foreground = ${xrdb:color7:#2AA198}

[bar/topr]
;monitor = ${env:MONITOR:HDMI-1}
